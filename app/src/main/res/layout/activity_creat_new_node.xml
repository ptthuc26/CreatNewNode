<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreatNewNode">

    <EditText
        android:id="@+id/edTitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/vien"
        android:hint="Title" />

    <EditText
        android:id="@+id/edDes"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/vien"
        android:gravity="start"
        android:hint="Description" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Remind me at:"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:id="@+id/tvTime"
                android:textColor="@color/colorAccent"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="14:20"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tvDate"
                android:textColor="@color/colorAccent"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="04/03/2016"
                android:textSize="35sp"
                android:gravity="center|right"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="Type:"
            android:gravity="center|left"
            android:textSize="20sp"/>
        <Spinner
            android:id="@+id/spChose"
            android:layout_width="200dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="Tags:"
            android:gravity="center|left"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/tvChoseTags"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:hint="Chose Tags"
                android:textColor="@color/colorBLue"
                android:textColorHint="@color/colorGray"
                android:gravity="center|left" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="Weeks:"
            android:gravity="center|left"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/tvChoseWeeks"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:hint="Chose Weeks"
                android:textColor="@color/colorBLue"
                android:textColorHint="@color/colorGray"
                android:gravity="center|left" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnTune"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:text="TUNE"
        android:textSize="20sp"
        android:background="@color/colorYellow"/>
</LinearLayout>